<h1>Edit this Recipe:</h1>

<form action="/recipes/<%= @recipes.id %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <br>
  <input type="text" name="name" value="<%= @recipes.name %>">
  <br>
  <input type="text" name="ingredients" value="<%= @recipes.ingredients %>">
  <br>
  <input type="text" name="cook_time" value="<%= @recipes.cook_time %>">
  <br>
  <input type="submit" value="Edit">
</form>



<a href="/recipes">Go Back</a>
